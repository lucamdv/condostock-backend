// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- PERMISSÕES DE ACESSO ---
enum Role {
  ADMIN     // Síndico (Tem acesso total)
  RESIDENT  // Morador (Apenas compra e vê saldo)
}

// --- CORE BACKSTOCK: PRODUTOS E ESTOQUE ---

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  barcode     String?  @unique // Leitura de código de barras no PDV
  price       Decimal  @db.Decimal(10, 2)
  minStock    Int      @default(5) 
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  batches     Batch[]  // Controle de Lotes (Validade)
  saleItems   SaleItem[]

  @@map("products")
}

model Batch {
  id          String    @id @default(uuid())
  code        String    // Código do lote
  expiryDate  DateTime  // Validade (FEFO)
  productId   String
  product     Product   @relation(fields: [productId], references: [id])
  
  stock       Stock?    // Estoque vinculado ao lote
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("batches")
}

model Stock {
  id        String   @id @default(uuid())
  batchId   String   @unique
  batch     Batch    @relation(fields: [batchId], references: [id])
  quantity  Int      // Quantidade real
  
  updatedAt DateTime @updatedAt

  @@map("stocks")
}

// --- CONDOMÍNIO: MORADORES (LOGIN + HIERARQUIA) ---

model Resident {
  id        String   @id @default(uuid())
  
  // --- Autenticação ---
  name      String
  email     String   @unique // Login do sistema
  password  String   // Senha criptografada
  role      Role     @default(RESIDENT)
  
  // --- Dados Residenciais ---
  apartment String   // Ex: 302
  block     String   // Ex: A
  phone     String?
  cpf       String?  @unique
  
  // --- Controle & Hierarquia ---
  active       Boolean @default(true)  // Bloqueio por inadimplência
  approved     Boolean @default(false) // Aprovação do Síndico
  
  isMainTenant Boolean @default(true)  // É o titular da conta?
  parentId     String?                 // Se for dependente, ID do titular
  
  // Relações Familiares (Árvore)
  guardian     Resident?   @relation("FamilyTree", fields: [parentId], references: [id])
  dependents   Resident[]  @relation("FamilyTree")

  // Relações Financeiras
  account      ResidentAccount?
  sales        Sale[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("residents")
}

model ResidentAccount {
  id          String   @id @default(uuid())
  residentId  String   @unique
  resident    Resident @relation(fields: [residentId], references: [id])
  
  balance     Decimal  @default(0.00) @db.Decimal(10, 2) // Saldo devedor
  creditLimit Decimal  @default(200.00) @db.Decimal(10, 2) // Limite de crédito
  
  status      AccountStatus @default(ACTIVE)

  updatedAt   DateTime @updatedAt

  @@map("resident_accounts")
}

enum AccountStatus {
  ACTIVE
  BLOCKED
}

// --- FRENTE DE LOJA (PDV) ---

model Sale {
  id          String      @id @default(uuid())
  total       Decimal     @db.Decimal(10, 2)
  status      SaleStatus  @default(COMPLETED)
  paymentType PaymentType 
  
  // Venda pode ser anônima ou fiado (vinculada a morador)
  residentId  String?
  resident    Resident?   @relation(fields: [residentId], references: [id])

  items       SaleItem[]
  
  createdAt   DateTime    @default(now())

  @@map("sales")
}

enum SaleStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum PaymentType {
  CREDIT_CARD
  DEBIT_CARD
  PIX
  CASH
  FIADO // Débito na conta do morador
}

model SaleItem {
  id        String  @id @default(uuid())
  saleId    String
  sale      Sale    @relation(fields: [saleId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2)

  @@map("sale_items")
}