// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- GESTÃO DE USUÁRIOS E ACESSO [cite: 106] ---
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Será hash bcrypt [cite: 74]
  name      String
  role      Role     @default(ADMIN) // Controle de permissões [cite: 75]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  ADMIN
  SINDICO
  OPERADOR
}

// --- CORE BACKSTOCK: PRODUTOS E ESTOQUE [cite: 19] ---

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  barcode     String?  @unique // Importante para o PDV [cite: 29]
  price       Decimal  @db.Decimal(10, 2)
  minStock    Int      @default(5) // Para alertas de estoque mínimo [cite: 23]
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  batches     Batch[]  // Um produto pode ter vários lotes
  saleItems   SaleItem[]

  @@map("products")
}

model Batch {
  id          String    @id @default(uuid())
  code        String    // Código do lote impresso na embalagem
  expiryDate  DateTime  // Fundamental para controle de validade [cite: 21]
  productId   String
  product     Product   @relation(fields: [productId], references: [id])
  
  // Estoque é rastreado por lote para garantir FIFO/FEFO
  stock       Stock?    

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("batches")
}

model Stock {
  id        String   @id @default(uuid())
  batchId   String   @unique
  batch     Batch    @relation(fields: [batchId], references: [id])
  quantity  Int      // Quantidade real deste lote específico [cite: 20]
  
  updatedAt DateTime @updatedAt

  @@map("stocks")
}

// --- CONDOMÍNIO: MORADORES E CONTAS [cite: 35] ---

model Resident {
  id          String   @id @default(uuid())
  name        String
  unit        String   // Apartamento/Bloco [cite: 36]
  phone       String?
  cpf         String?  @unique
  active      Boolean  @default(true) // Bloqueio por inadimplência [cite: 42]
  
  account     ResidentAccount?
  sales       Sale[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("residents")
}

model ResidentAccount {
  id          String   @id @default(uuid())
  residentId  String   @unique
  resident    Resident @relation(fields: [residentId], references: [id])
  
  balance     Decimal  @default(0.00) @db.Decimal(10, 2) // Saldo devedor atual
  creditLimit Decimal  @default(200.00) @db.Decimal(10, 2) // Limite configurável [cite: 38]
  
  status      AccountStatus @default(ACTIVE)

  updatedAt   DateTime @updatedAt

  @@map("resident_accounts")
}

enum AccountStatus {
  ACTIVE
  BLOCKED // Para inadimplentes
}

// --- FRENTE DE LOJA (PDV) [cite: 28] ---

model Sale {
  id          String      @id @default(uuid())
  total       Decimal     @db.Decimal(10, 2)
  status      SaleStatus  @default(COMPLETED)
  paymentType PaymentType 
  
  // Venda pode ser anônima ou vinculada a um morador (fiado)
  residentId  String?
  resident    Resident?   @relation(fields: [residentId], references: [id])

  items       SaleItem[]
  
  createdAt   DateTime    @default(now()) // Data da venda

  @@map("sales")
}

enum SaleStatus {
  PENDING
  COMPLETED
  CANCELLED // Suporte a estorno [cite: 32]
}

enum PaymentType {
  CREDIT_CARD
  DEBIT_CARD
  PIX
  CASH
  FIADO // Saldo na conta do morador [cite: 39]
}

model SaleItem {
  id        String  @id @default(uuid())
  saleId    String
  sale      Sale    @relation(fields: [saleId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2) // Preço no momento da venda (histórico)

  @@map("sale_items")
}